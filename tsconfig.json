{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "lib": ["es2017", "dom"],
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jasmine", "karma"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*.ts",
    "e2e/**/*.ts",
    "typescript.ts",
    "vue.vue"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
